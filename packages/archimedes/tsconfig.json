{
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": ["esnext", "dom"],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "strict": true
    },

    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
